{
    "name": "pwa-template",
    "version": "0.2.0",
    "description": "PWA template with PHP SSR and Vite-powered TypeScript build",
    "repository": {
        "type": "git",
        "url": "https://github.com/hkcmoris/pwa-template.git"
    },
    "scripts": {
        "dev": "vite",
        "dev:php": "php -d post_max_size=32M -d upload_max_filesize=32M -S localhost:8000 -t server server/router.php",
        "start": "npm run dev:php",
        "build": "node scripts/build.mjs",
        "format": "prettier --write .",
        "lint:ts": "eslint \"src/**/*.{ts,tsx}\"",
        "lint:css": "stylelint \"src/**/*.css\" --fix && stylelint \"server/**/*.{php,html}\"",
        "lint:php": "composer --working-dir=server run lint:php",
        "fix:php": "composer --working-dir=server run fix:php",
        "lint": "npm run lint:ts && npm run lint:css && npm run lint:php",
        "lhci": "lhci autorun",
        "test": "jest"
    },
    "devDependencies": {
        "@lhci/cli": "^0.15.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.3.0",
        "@typescript-eslint/eslint-plugin": "^8.40.0",
        "@typescript-eslint/parser": "^8.40.0",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^9.1.0",
        "jest": "^30.1.3",
        "jest-environment-jsdom": "^30.1.2",
        "postcss-html": "^1.8.0",
        "prettier": "^3.2.5",
        "stylelint": "^16.24.0",
        "stylelint-config-html": "^1.1.0",
        "stylelint-config-recommended": "^17.0.0",
        "stylelint-config-standard": "^39.0.0",
        "stylelint-order": "^7.0.0",
        "ts-jest": "^29.4.4",
        "typescript": "^5.4.0",
        "vite": "^7.1.3"
    },
    "browser": {
        "fs": false,
        "os": false,
        "path": false
    },
    "browserslist": [
        "defaults",
        ">0.2%",
        "not dead",
        "not op_mini all"
    ]
}
