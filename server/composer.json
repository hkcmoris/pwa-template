{
    "name": "hkcmoris/hagemann-configurator",
    "type": "project",
    "license": "MIT",
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.13",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpstan/phpstan": "^2.1"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "7.4.0"
        }
    },
    "scripts": {
        "lint:php:cs": "phpcs -q --standard=phpcs.xml",
        "fix:php": "phpcbf -q --standard=phpcs.xml",
        "lint:php:stan": "phpstan analyse -c phpstan.neon --memory-limit=512M",
        "lint:php": [
            "@lint:php:cs",
            "@lint:php:stan"
        ]
    }
}
