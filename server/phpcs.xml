<?xml version="1.0"?>
<ruleset name="App">
    <description>PSR-12 + PHP 7.4 compatibility</description>
    <file>.</file>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>sw.js</exclude-pattern>
    <exclude-pattern>public/sw/</exclude-pattern>
    <exclude-pattern>public/assets/*</exclude-pattern>
    <!-- If these views are pure HTML, exclude them so PHPCS doesn't whine -->
    <exclude-pattern>views/about.php</exclude-pattern>
    <exclude-pattern>views/home.php</exclude-pattern>
    <exclude-pattern>views/login.php</exclude-pattern>
    <exclude-pattern>views/register.php</exclude-pattern>
    <exclude-pattern>views/demo.php</exclude-pattern>
    <config name="ignore_warnings_on_exit" value="1"/>
    <rule ref="PSR12"/>
    <config name="testVersion" value="7.4-7.4"/>
    <!-- set to your exact prod -->
    <rule ref="PHPCompatibility"/>
    <rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
        <exclude-pattern>config/*</exclude-pattern>
        <exclude-pattern>migrate.php</exclude-pattern>
        <exclude-pattern>views/*</exclude-pattern>
    </rule>
</ruleset>
